<% layout("layouts/boilerplate") -%>


<section class="container">
    <div class="row">
        <div class="col-lg-8">
            <%for(let item of user.cart){%>
                <div class="card mx-auto mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img src="<%=item.img%>" class="img-fluid rounded-start" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%=item.name%></h5>
                          <p class="card-text"><%=item.desc%></p>
                          <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %> 
        </div>
        <div class="col-lg-4">
            <ul class="list-group">
                <% for (let item of user.cart) {%>
                    <li class="list-group-item"><span class="fw-bold"><%=item.name%> - </span>$ <span><%=item.price%></span></li>
                    <%}%>
                <li class="list-group-item fw-bold">Total Amount: $<%=totalAmount%></li>
            </ul>
            <button class="btn btn-sm btn-success mt-3">CheckOut</button>
        </div>
    </div>
         
</section>

